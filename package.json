{
  "private": true,
  "version": "0.1.0",
  "repository": "git@github.com:BlackGlory/stream.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --config jest.config.cjs",
    "test:debug": "cross-env NODE_OPTIONS='--experimental-vm-modules --inspect-brk' jest --runInBand --config jest.config.cjs",
    "dev": "nodemon",
    "clean": "rimraf lib dist",
    "build": "tsc --project tsconfig.build.json",
    "bundle": "webpack --stats-error-details",
    "start": "node dist/index.cjs",
    "smoke": "cross-env NODE_ENV=test node dist/index.cjs",
    "docker:build": "docker build --tag stream .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare clean lint build test bundle smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^2.0.1",
    "@blackglory/jest-resolver": "^0.3.0",
    "@blackglory/wait-for": "^0.7.3",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "29.5.0",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "extra-fetch": "^4.0.5",
    "extra-request": "^8.4.0",
    "extra-response": "^0.5.1",
    "hotypes": "^0.6.1",
    "husky": "4",
    "jest": "29.5.0",
    "jest-resolve": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.0.0",
    "return-style": "^3.0.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "29.0.5",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.8",
    "typescript-transform-paths": "^3.4.6",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "yarn-deduplicate": "^6.0.1"
  },
  "dependencies": {
    "16": "^0.0.2",
    "@blackglory/errors": "^3.0.0",
    "@blackglory/prelude": "^0.3.1",
    "@fastify/cors": "^8.2.1",
    "dotenv": "^16.0.3",
    "extra-abort": "^0.3.4",
    "extra-filesystem": "^0.4.10",
    "extra-promise": "^6.0.5",
    "extra-semver": "^0.2.1",
    "extra-tags": "^0.4.1",
    "extra-timers": "^0.2.5",
    "fastify": "^4.15.0",
    "justypes": "^4.2.0",
    "value-getter": "^0.3.0",
    "you-died": "^0.4.3"
  }
}
